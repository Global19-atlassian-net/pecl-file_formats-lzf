<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "../package.dtd">
<package>
 <name>LZF</name>
 <summary>LZF compression.</summary>
 <description>
  This package handles LZF de/compression.
 </description>
 <license>PHP License</license>
 <maintainers>
  <maintainer>
   <user>mg</user>
   <name>Marcin Gibula</name>
   <email>mg@iceni.pl</email>
   <role>lead</role>
  </maintainer>
 </maintainers>

 <release>
  <version>1.5</version>
  <date>2006-07-29</date>
  <state>stable</state>
  <notes>
   Bugfix release; updated bundled library to new version (1.6).
  </notes>
  <configureoptions>
    <configureoption name="enable-lzf-better-compression" default="no" prompt="Sacrifice speed in favour of compression ratio?"/>
  </configureoptions>
  <filelist>
    <dir role="src" name="/">
        <file role="doc">CREDITS</file>

        <file role="src">config.m4</file>
        <file role="src">config.w32</file>
        <file role="src">php_lzf.h</file>
        <file role="src">lzf.c</file>
        <file role="src">lzf.h</file>
        <file role="src">lzfP.h</file>
        <file role="src">lzf_c.c</file>
        <file role="src">lzf_d.c</file>
        <file role="src">lzf.dsp</file>

        <file role="test" name="tests/001.phpt"/>
        <file role="test" name="tests/002.phpt"/>
        <file role="test" name="tests/003.phpt"/>
     </dir>
  </filelist>
 </release>
</package>

